<h2>
  <%= @lesson.title || "New Lesson Plan" %>
</h2>

<%= simple_form_for @lesson do |f| %>
  <div class="row">
    <div class="columns large-8">
      <h3 class="with-icon">
        <i class="fa fa-file fa-fw"></i>
        Lesson Plan
      </h3>
    </div>

    <div class="columns large-4 text-=right">
      <h4 class="with-icon">
        <i class="fa fa-road fa-fw"></i>
        Course
      </h4>
      <%= f.input :course_id, collection: current_user.courses.to_a, prompt: "Select a course.", label: false, input_html: { class: "with-select2" } %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.input :title %>
      <%= cktext_area :body, label: false %>
    </div>
    <div class="large-12 columns text-right">
      <%= f.button :submit, "Create Lesson Plan", id: "lesson-form-submit" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="columsn large-4">
    <h3 class="with-icon">
      <i class="fa fa-calendar fa-fw"></i>
      Schedule
    </h3>
    <%= simple_form_for [@lesson, @delivery] do |f| %>
      <%= f.input :date, :as => :string, placeholder: "ex. next Thursday, Fri Nov 22nd, or 12/22/13" %>
      <%= f.submit "Schedule Lesson", :class => "button small" %>
    <% end %>
    <ul class="delivery-dates"></ul>
  </div>
</div>

<div class="row">
  <div class="standards-view">
    <%= simple_form_for [@lesson, @standard] do |f| %>
      <div class="row">
        <div class="columns large-4">
          <h3 class="with-icon">
            <i class="fa fa-calendar fa-fw"></i>
            Standards
          </h3>
        </div>

        <div class="columns large-4 large-4-offset text-right">
          <%= f.button :submit, "Assign", :class => "button small", :type => "button" %>
        </div>
      </div>

      <div class="row">
        <div class="columns large-12">
          <%= f.input :standard_id, :as => :string, :input_html => { :value => "" } %>
          <%= f.input :lesson_id, :as => :hidden %>
        </div>
      </div>
    <% end %>

    <div class="standards-results"></div>
  </div>
</div>

<div id="templates">
  <script class="delivery-link" type="text/templates">
    <span class="date">{{ date }}</span>
    <a href="#" class="destroy-link"><i class="fa fa-minus-circle"></i></a>
  </script>

  <script class="standard-view" type="text/templates">
    <p>{{ text }}</p>
  </script>
</div>

<% content_for :stylesheet do %>
  <style>
    <% @standards.each do |standard| %>
      <%= ".standards-results.searching.r#{standard.id} .standard-row.r#{standard.id}{
        display: block;
      }" %>
    <% end %>
    .standard-row.r2494 {
      border: thin solid red;
    }
  </style>
<% end %>

<% content_for :javascript do %>
  <script type="text/javascript">
    !function () {
      var url = '<%= lesson_deliveries_path @lesson %>'
      init.deliveries(<%= raw @deliveries %>, url);
      var standards = new LunarCollection();
      var standardsView = new LunrView({
        collection: standards
      });
      standards.reset(<%= raw @standards.to_a.to_json %>);

      $('#new_delivery').on('submit', function (e) {
        e.preventDefault();

        $.ajax({
          url: url,
          method: 'POST',
          data: {
            delivery: {
              date: $('#delivery_date').val()
            }
          },
          success: function (data) {
            deliveriesCollection.add(data);
            $('#delivery_date').val('');
          }
        })
      });
    }();
  </script>
<% end %>